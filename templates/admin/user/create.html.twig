{% extends "/base.html.twig" %}

{% block body %}
	<article class="row d-flex flex-wrap">
		<p><a class="card-link my-4" href="/user/read">Retour</a></p>
		<div class="col-lg-5 mt-lg-4">
			<img src="/image/admin-user.png" alt="image-user" class="mw-100">
		</div>
		
		<section class="col-lg-6 p-lg-5">
			<h1>Nouveau Bubbles User</h1>
			<form action="create" method="post" class="row g-3">
				<p class="text-danger">Les champs marqués d'un * sont obligatoires.</p>
				<div class="mb-2">
					{% for role in roles %}
							<div class="form-check ms-1">
								<input class="form-check-input border-2" type="checkbox" name="role" id="Role" value="{{ role.id }}">
								<label class="form-check-label" for="Role">{{ role.name }}</label>
							</div>
					{% endfor %}
					<label class="form-label h6" for="Role">Rôle*</label>
				</div>

				<div class="d-flex flex-row align-items-center mb-4">
					<div class="form-outline flex-fill mb-0">
						<input type="text" name="pseudo" id="Pseudo" class="form-control border-2" value="{{ user.pseudo }}"/>
						<label class="form-label h6" for="Pseudo">Prénom/Pseudo*</label>
					</div>
				</div>

				<div class="d-flex flex-row align-items-center mb-4">
					<div class="form-outline flex-fill mb-0">
						<input type="email" name="email" id="form3Example3c" class="form-control border-2" value="{{ user.email }}"/>
						<label class="form-label h6" for="form3Example3c">Email*</label>
					</div>
				</div>

				<div class="d-flex flex-row align-items-center mb-4">
					<div class="form-outline flex-fill mb-0">
						<input type="password" name="password" id="password" class="form-control border-2"/>
						<label class="form-label h6" for="form3Example4c">Mot de passe*</label>
					</div>
				</div>

				<div class="d-flex flex-row align-items-center mb-4">
					<div class="form-outline flex-fill mb-0">
						<input type="password" name="password_2" id="password_2" class="form-control border-2"/>
						<label class="form-label h6" for="">Confirmez mot de passe*</label>
					</div>
				</div>
				<button type="submit" class="bluegrey">Ajouter</button>
			</form>
		</section>
	</article>
{% endblock %}
