{% extends "/base.html.twig" %}

{% block menu_user %}
	active
{% endblock %}

{% block body %}
    <article class="d-flex flex-column">
        <h1>Modifier le profil de
            {{ user.email }}</h1>
        <div class="d-flex justify-content-around my-3">
            <a class="btn" href="/user/read">Retour</a>
        </div>
        <form action="update/{{user.id}}" method="post" class="row g-3">
            <div class="col-md-6">
                <label for="Role" class="form-label">Email</label>
                <input type="email" class="form-control" value="{{user.email}}" name="email" id="Email">
            </div>

            <div class="col-md-6">
                <label for="Role" class="form-label">Mot de passe</label>
                <input type="password" class="form-control" value="{{user.password}}" name="password_1" id="password_1">
            </div>

            <div class="col-md-6">
                <label for="Role" class="form-label">Confirmez mot de passe</label>
                <input type="password" class="form-control" value="{{user.password}}" name="password_2" id="password_2">
            </div>

            <div class="col-12">
                <button class="btn" type="submit">Modifier</button>
            </div>
        </form>
    </article>
{% endblock %}
