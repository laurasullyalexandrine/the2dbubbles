{% extends "/base.html.twig" %}
{% block menu_role %}
	active
{% endblock %}
{% block body %}
	<h1>Bubble Rôles</h1>
	<div class="d-flex justify-content-around my-3">
		<a class="btn" href="/main/home">Retour</a>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for role in roles %}
				<tr>
					<td>{{ role.id }}</td>
					<td>{{ role.name }}</td>
					<td class="d-flex">
						<a class="btn" href="/role/update/{{ role.id }}">Modifer un Bubble Role</a>
						{{ include('role/_delete.html.twig') }}
					</td>
				</tr>
			</td>
		</tbody>
	</tr>
{% else %}
	<tr>
		<td colspan="5">Aucun enregistrement trouvé</td>
	</tr>
{% endfor %}
</tbody>
</table>
<a class="btn mb-5" href="/role/create">Ajouter Bubble Role</a>
{% endblock %}
