{% extends "/base.html.twig" %}

{% block body %}
	<section class="vh-100">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-lg-12 col-xl-11">
					<div class="card " style="border-radius: 25px;">
						<div class="card-body p-md-5">
							<div class="row justify-content-center">
								<div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
									<img src="/image/bienvenue.png" class="img-fluid" alt="Sample image">
								</div>
								<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

									<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Crée ton Bubble Space</p>

									<form action="register" method="POST" class="mx-1 mx-md-4">

										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												<input type="text" name="pseudo" id="Pseudo" class="form-control" value="{{ user.pseudo }}"/>
												<label class="form-label" for="Pseudo">Prénom/Pseudo</label>
											</div>
										</div>

										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												<input type="email" name="email" id="Email" class="form-control" value="{{ user.email }}"/>
												<label class="form-label" for="Email">Email</label>
											</div>
										</div>
										
										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												<input type="password" name="password_1" id="password_1" class="form-control"/>
												<label class="form-label" for="Password_1">Mot de passe</label>
											</div>
										</div>

										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-key fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												<input type="password" name="password_2" id="password_2" class="form-control"/>
												<label class="form-label" for="Password_2">Confirmez mot de passe</label>
											</div>
										</div>
											<input type="hidden" value="utilisateur" name="role" id="Role">
										<div
											class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
											{# <input type="hidden" value="{{ tokenCSRF }}" name="tokenCSRF"> #}
											<button type="submit" class="bluegrey bluegrey-lg">Inscristion</button>
										</div>
									</form>

								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		   	<div class="d-flex justify-content-around my-3">
		<a class="bluegrey" href="/security/login">Vous avez déjà un compte ?</a>
	</div>
				<p class="text-danger fst-italic text-center">Les champs marqués d'un * sont obligatoires.</p>
	</section>
{% endblock %}
