{% extends "/base.html.twig" %}

{% block body %}
	<div class="d-flex justify-content-between my-3">
		<h2>Laissez un commentaire</h2>
	</div>

	<form action="/comment/create/{{ post.slug }}" method="post" class="row g-3">
        <div class="col-md-6">
			<textarea class="form-control" name="content" id="Content" rows="8" value="{{ post.content }}"></textarea>
			<label for="Contenu" class="form-label">Contenu</label>
		</div>
		<div class="col-12">
			<button class="btn" type="submit">Publier un commentaire</button>
		</div>
    </form>
{% endblock %}
