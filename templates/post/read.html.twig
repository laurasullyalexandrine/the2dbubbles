{% extends "/base.html.twig" %}
{% block menu_post %} active {% endblock %}

{% block body %}
    <article>
        <section>
            <div class="d-flex justify-content-between my-3">
                <h1>{{post.title}}<a class="btn ms-5" href="/post/list">Retour</a></h1>
            </div>
            <h2>{{post.chapo}}</h2> 
                <p class="fst-italic"> Publié le
                <time datetime="{{post.createdAt|date('d-m-Y')}}">{{post.createdAt|date('d-m-Y')}}</time>
                <time datetime="{{post.createdAt|date('H:i:s')}}">{{post.createdAt|date('H:i:s')}}</time> -
                {% if post.status == 1 %}
                    Validé <i class="fa-solid fa-circle-check" style="color: #17cf1a;"></i>
                {% else %}
                    Non validé <i class="fa-sharp fa-solid fa-circle-xmark" style="color: #e90712;"></i>
            {% endif %}
            </p>
            <p class="text-justify w-50">{{ post.content }}</p>
            <p class="fw-bolder">Auteur : {{post.user}} Modifié le </p>
            <div class="d-flex">
				{{ include('post/_delete.html.twig') }}
            </div>
            	<a class="btn " href="/post/update/{{post.slug}}">edit</a>
        </section>

        <section>
            <h2>Commentaires <a class="btn ms-5" href="/comment/create">Ajouter</a></h2>
            
        </section>
</article>
{% endblock %}