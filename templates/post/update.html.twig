{% extends "/base.html.twig" %}
{% block menu_post %} active {% endblock %}

{% block body %}

<article class="container">
	<section class="row">
		<div class="d-flex justify-content-between my-3">
			<h1>Modifier l'article : {{ post.title }}<a class="btn ms-5" href="/post/list">Retour</a></h1>
		</div>
		<form action="/post/update/{{ post.slug }}" method="post" class="row g-3">
			<div class="col-md-6">
				<input type="text" class="form-control" value="{{ post.title }}" name="title" id="Title">
				<label for="Title" class="form-label">Titre</label>

				<textarea class="form-control mt-4" name="content" id="Content" rows="8" value="{{ post.content }}">{{ post.content }}</textarea>
				<label for="Contenu" class="form-label">Contenu</label>
			</div>

			<div class="col-md-6">
				<input type="text" class="form-control" value="{{ post.chapo }}" name="chapo" id="Chapo">
				<label for="Chapo" class="form-label">Chapô</label>

				<div class="form-check mt-4">
					{% if post.status == true %}
						<div class="form-check">
							<input class="form-check-input" type="radio" name="status" id="Status" value="true" checked>
							<label class="form-check-label" for="Role">Validé</label>
							<i class="fa-solid fa-circle-check" style="color: #17cf1a;"></i>
						</div>
					{% else %}
						<div class="form-check">
							<input class="form-check-input" type="radio" name="status" id="Status" value="true">
							<label class="form-check-label" for="Role">Validé</label>
							<i class="fa-solid fa-circle-check" style="color: #17cf1a;"></i>
						</div>
					{% endif %}
					
					{% if post.status == false %}
						<div class="form-check">
							<input class="form-check-input" type="radio" name="status" id="Status" value="false" checked>
							<label class="form-check-label" for="Role">Non Validé</label>
							<i class="fa-sharp fa-solid fa-circle-xmark" style="color: #e90712;"></i>
						</div>
					{% else %}
						<div class="form-check">
							<input class="form-check-input" type="radio" name="status" id="Status" value="false">
							<label class="form-check-label" for="Role">Non Validé</label>
							<i class="fa-sharp fa-solid fa-circle-xmark" style="color: #e90712;"></i>
						</div>
					{% endif %}
					<label class="form-label" for="Status">Statut</label>
				</div>
			</div>		
			<div>
				<button class="btn" type="submit">Modifier</button>
			</div>
		</form>
	</section>
</article>
      
{% endblock %}

