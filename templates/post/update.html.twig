{% extends "/base.html.twig" %}
{% block menu_post %} active {% endblock %}

{% block body %}

<article class="container">
	<section class="row">
		<div class="d-flex justify-content-between my-3">
			<h1>Modifier l'article : {{ post.title }}<a class="btn ms-5" href="/post/list">Retour</a></h1>
		</div>
		<form action="/post/update/{{ post.slug }}" method="post" class="row g-3">
			<div class="col-md-6">
				<input type="text" class="form-control" value="{{ post.title }}" name="title" id="Title">
				<label for="Title" class="form-label">Titre</label>

				<textarea class="form-control mt-4" name="content" id="Content" rows="8" value="{{ post.content }}">{{ post.content }}</textarea>
				<label for="Contenu" class="form-label">Contenu</label>
			</div>

			<div class="col-md-6">
				<input type="text" class="form-control" value="{{ post.chapo }}" name="chapo" id="Chapo">
				<label for="Chapo" class="form-label">Chap√¥</label>
			</div>		
			<div>
				<button class="btn" type="submit">Modifier</button>
			</div>
		</form>
	</section>
</article>
      
{% endblock %}

